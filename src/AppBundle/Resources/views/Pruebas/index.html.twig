  {% endfor %}



<hr>
  {% if productos|length>0 %}
  {% for matriz in productos %}
    {{ matriz.producto }} - {{ matriz.precio }}<br>
  {% endfor %}
  {% endif %}
  <hr>
  {{generateTable(5,5)|raw}}

{% endblock %}
