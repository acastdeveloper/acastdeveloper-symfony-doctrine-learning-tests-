{% block container %}
  {{texto}}
  <hr>
  {{fruta.manzana}}
  <hr>

    {% if fruta.pera!="rica" %}
      Si la pera es rica que muestre {{fruta.manzana}} 
    {% endif %}

    {# Esto es un comentario de twig #}


    {% set fecha = date("-2 days", "Europe/Madrid") %}
    {{ dump(fecha) }}
  <hr>
    {{fecha.date|date('d-m-Y
    ')}}
  <hr>

  {{include('AppBundle:Pruebas:partial.html.twig')}}

