  {{ random(["Batman","Los juegos del hambre", "Terminator", "Rocinante"])}}

  <hr>
  {{parent()}}
  <hr>
  {% set variable = "Variable dentro de twig" %}
  {{ variable }}
  <hr>

  {% for i in range(0,10,3) %}
